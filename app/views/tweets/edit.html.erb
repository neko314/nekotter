<h1><%=t :Edit %></h1>
<%= form_for :tweet, url: user_tweet_path, method: :patch do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_field :content %>
  </p>

  <p>
    <%= f.submit t(:Update_tweet)  %>
  </p>
<% end %>

<%= link_to t("Back"), user_tweets_path(current_user) %>
